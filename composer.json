{
    "name": "moneta-api/moneta-api",
    "description": "PHP package for a working with Moneta.ru service",
    "keywords": [
        "php",
        "moneta",
        "client",
        "api"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Avto Develop",
            "homepage": "https://github.com/moneta-api"
        }
    ],
    "require": {
        "php": "^5.6 || >=7.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.3",
        "nesbot/carbon": "~1.20",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "mockery/mockery": "0.9.* || ~1.0",
        "phpunit/phpunit": "~5.7.10 || ^6.4 || ~7.0",
        "symfony/var-dumper": "~3.2 || ^4.0"
    },
    "autoload": {
        "psr-4": {
            "AvtoDev\\MonetaApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AvtoDev\\MonetaApi\\Tests\\": "tests"
        }
    },
    "support": {
        "issues": "https://github.com/moneta-api/moneta-api/issues",
        "source": "https://github.com/moneta-api/moneta-api"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --no-coverage",
        "test-cover": "@php ./vendor/bin/phpunit --coverage-html='./coverage/html'"
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true
}
